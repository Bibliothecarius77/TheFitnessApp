@model TheFitnessApp.Models.WorkoutSession

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Delete Workout Session";
}

<div class="text-center text-white rounded-3 mb-4 p-3"
    style="background: linear-gradient(135deg,#5b0e16,#e63244);">
    <h3>Delete Workout Session</h3>
</div>

<!-- Warning -->
<div class="alert alert-warning mb-3 text-center">
    Are you sure you want to delete this session?
</div>
    
<!-- Details -->
<p class="d-flex justify-content-between">Date
    <span>@Model.StartTime.ToShortDateString()</span>
</p>

<p class="d-flex justify-content-between">Time
    <span>@Model.StartTime.ToShortTimeString() -
        @Model.EndTime.ToShortTimeString()</span>
</p>

<p class="d-flex justify-content-between">Calories
    <span class="fw-bold text-danger">
        @Model.TotalCalories kcal</span>
</p>

<!-- Form -->
<form asp-action="DeleteSession" method="post" class="mt-4">
    <input type="hidden" asp-for="SessionID" />
    <input type="hidden" asp-for="ScheduleID" />

    <div class="d-flex justify-content-between">
        <a asp-controller="Home" asp-action="upcoming"
            asp-route-id="@Model.ScheduleID"
            class="btn btn-secondary px-4 rounded-pill">
            Cancel
        </a>

        <button type="submit" class="btn btn-danger px-4 rounded-pill">
            Delete
        </button>
    </div>
</form>
