@model TheFitnessApp.Models.WorkoutGoal

@{
    ViewData["Title"] = "Edit Goal";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="mb-4">Edit Goal</h1>

            <form asp-action="Edit" method="post">
                @*
                Hidden field:
                Skickar med GoalID till Edit (POST) så att rätt träningsmål
                 uppdateras i databasen.
                   Användaren ser inte detta fält.
                *@
                <input type="hidden" asp-for="GoalID" />

                <div class="mb-3">
                    <label asp-for="TargetValue" class="form-label"></label>
                    <input asp-for="TargetValue" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Deadline" class="form-label"></label>
                    <input asp-for="Deadline" type="date" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Save Changes
                </button>

            </form>

        </div>
    </div>
</div>
