@model TheFitnessApp.Models.WorkoutGoal
@* Visar detaljer för ett specifikt mål *@
@* kräver att controllern skickar ett WorkoutGoal-objekt (senare via Repository). *@
@{
    ViewData["Title"] = "Goal Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="mb-4">Goal Details</h1>

            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <strong>Type:</strong> @Model.Type
                </li>
                <li class="list-group-item">
                    <strong>Target:</strong> @Model.TargetValue
                </li>
                <li class="list-group-item">
                    <strong>Deadline:</strong> @Model.Deadline.ToShortDateString()
                </li>
                <li class="list-group-item">
                    <strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Not completed")
                </li>
            </ul>

            <a asp-action="Edit" asp-route-id="@Model.GoalID" class="btn btn-warning">
                Edit
            </a>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Back to list
            </a>

        </div>
    </div>
</div>
