@model TheFitnessApp.Models.WorkoutSession

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Workout Details";

    // Kollar om passet är avslutat
    bool isExpired = Model != null && Model.EndTime < DateTime.Now;
}

<div>
    <div class="card-body p-4">

        <!-- Titel -->
        <div class="d-flex justify-content-between align-items-center mb-1">
            <div class="me-5">
                <h4 class="fw-medium">My Session</h4>
                <h1 class="fw-bold text-muted">Details</h1>
            </div>
                <img src="/images/Zenmove-logo.jpg" 
                    class="rounded-4 mb-3 ms-4"
                    style="max-width: 120px;" />
        </div>

        <!-- Status-badge om passet är avslutat -->
        @if (isExpired)
        {
            <span class="badge bg-success-subtle text-success fw-medium mb-3">
                Completed
            </span>
        }

        <!-- Datum och tid -->
        <div class="row mt-3">
            <div class="col">
                <div class="card shadow-sm rounded-4 mb-2">
                    <div class="card-body text-center fw-bold text-muted">
                        <div class="mb-1">
                            Date: @Model!.StartTime.ToShortDateString()
                        </div>
                        <div>
                            Time: @Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistik -->
    <div class="row text-center g-4 mb-3">
        <div class="col-md-4">
            <div class="p-3 bg-light rounded-3">
                <div class="text-muted small">ID#</div>
                <div class="fs-1 mt-1 fw-bold text-secondary">
                    @Model.SessionID
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-3 bg-light rounded-3">
                <div class="text-muted small">Duration</div>
                <div class="fs-4 fw-bold">
                    @((int)(Model.EndTime - Model.StartTime).TotalMinutes)
                    <span class="fs-5 fw-normal">mins</span>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-3 bg-light rounded-3">
                <div class="text-muted small">Calories</div>
                <div class="fs-4 fw-bold text-primary">
                    @Model.TotalCalories
                    <span class="fs-5 fw-normal">kcal</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Action-knappar -->
<div class="row mt-5">
    <div class="col text-center d-flex justify-content-center gap-3">
        <a asp-controller="Schedule"
           asp-action="Details"
           asp-route-id="@Model.ScheduleID"
           class="btn btn-outline-secondary px-5 rounded-pill">
            Back to Schedule
        </a>
    </div>
</div>
