@model TheFitnessApp.Models.WorkoutSession
@* Kopplar vyn till modellen WorkoutSession *@

@{
    ViewData["Title"] = "Edit Workout Session";
}

<!--
    Bootstrap container:
    - Begränsar sidans bredd
    - Ger luft runt innehållet
-->
<div class="container mt-5">

    <!-- Centrerar formuläret horisontellt -->
    <div class="row justify-content-center">

        <!-- Gör formuläret lagom brett -->
        <div class="col-md-6">

            <!-- Sidrubrik -->
            <h1>Edit Workout Session</h1>

            <p>
                Här kan du redigera information om ett träningspass.
            </p>

            <!--
                FORM:
                - asp-action="Edit" → POST till Edit-metoden i WorkoutController
                - method="post" → skicka data säkert
            -->
            <form asp-action="Edit" method="post">

                <!-- Skickar med ID:t (behövs vid uppdatering) -->
                <input type="hidden" asp-for="SessionID" />

                <!-- Schedule ID -->
                <div class="form-group mb-3">
                    <label asp-for="ScheduleID"></label>
                    <input asp-for="ScheduleID" class="form-control" />
                </div>

                <!-- Starttid -->
                <div class="form-group mb-3">
                    <label asp-for="StartTime"></label>
                    <input asp-for="StartTime"
                           type="datetime-local"
                           class="form-control" />
                </div>

                <!-- Sluttid -->
                <div class="form-group mb-3">
                    <label asp-for="EndTime"></label>
                    <input asp-for="EndTime"
                           type="datetime-local"
                           class="form-control" />
                </div>

                <!-- Totala kalorier -->
                <div class="form-group mb-4">
                    <label asp-for="TotalCalories"></label>
                    <input asp-for="TotalCalories" class="form-control" />
                </div>

                <!-- Knappar -->
                <button type="submit" class="btn btn-primary">
                    Save changes
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Cancel
                </a>

            </form>

        </div>
    </div>
</div>
