@model TheFitnessApp.Models.Exercise

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Delete Exercise";
}

<div class="text-center text-white rounded-3 mb-4 p-3"
    style="background: linear-gradient(135deg,#5b0e16,#e63244);">
    <h2>Delete Exercise</h2>
</div>

<!-- Warning -->
<div class="alert alert-warning mb-3 text-center">
    Are you sure you want to delete this exercise?
</div>
    
<!-- Details -->
<p class="d-flex justify-content-between">Category
    <span>@Model.Category</span>
</p>

<p class="d-flex justify-content-between">Type
    <span>@Model.Type</span>
</p>

<p class="d-flex justify-content-between">Calories
    <span class="fw-bold text-danger">
        @Model.CaloriesBurnt kcal</span>
</p>

<!-- Form -->
<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="ExerciseID" />

    <div class="d-flex justify-content-between">
        <a asp-controller="Exercise" asp-action="Index"
            asp-route-id="@Model.ExerciseID"
            class="btn btn-secondary px-4 rounded-pill">
            Cancel
        </a>

        <button type="submit" class="btn btn-danger px-4 rounded-pill">
            Delete
        </button>
    </div>
</form>
