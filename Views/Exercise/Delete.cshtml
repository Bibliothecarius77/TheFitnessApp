@model TheFitnessApp.Models.Exercise
@* Kopplar vyn till Exercise-modellen *@

@{
    ViewData["Title"] = "Delete Exercise";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="text-danger mb-4">Delete Exercise</h1>

            <p>
                Är du säker på att du vill ta bort denna övning?
            </p>

            <!-- Visar enkel information om övningen -->
            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <strong>Category:</strong> @Model.Category
                </li>
                <li class="list-group-item">
                    <strong>Sets:</strong> @Model.Sets
                </li>
                <li class="list-group-item">
                    <strong>Reps:</strong> @Model.Reps
                </li>
            </ul>

            <!-- POST till Delete i ExerciseController -->
            <form asp-action="Delete" method="post">

                <!-- Skickar ID på övningen -->
                <input type="hidden" asp-for="ExerciseID" />

                <button type="submit" class="btn btn-danger">
                    Delete
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Cancel
                </a>

            </form>

        </div>
    </div>
</div>
