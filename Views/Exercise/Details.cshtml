@model TheFitnessApp.Models.Exercise

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Exercise Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="mb-4">Exercise Details</h1>

            <!-- Session Info -->
            <h5 class="mb-2">Session Info</h5>
            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <strong>Session ID:</strong> @Model.SessionID
                </li>
                <li class="list-group-item">
                    <strong>Start:</strong> @(Model.Session?.StartTime.ToString("dd MMM yyyy") ?? "N/A")
                </li>
                <li class="list-group-item">
                    <strong>End:</strong> @(Model.Session?.EndTime.ToString("dd MMM yyyy") ?? "N/A")
                </li>
            </ul>

            <!-- Exercise Info -->
            <h5 class="mb-2">Exercise Info</h5>
            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <strong>Type:</strong> @Model.Type
                </li>
                <li class="list-group-item">
                    <strong>Category:</strong> @Model.Category
                </li>
                <li class="list-group-item">
                    <strong>Sets:</strong> @Model.Sets
                </li>
                <li class="list-group-item">
                    <strong>Reps:</strong> @Model.Reps
                </li>
                <li class="list-group-item">
                    <strong>Weight (kg):</strong> @Model.WeightKG
                </li>
                <li class="list-group-item">
                    <strong>Calories Burnt:</strong> @Model.CaloriesBurnt
                </li>
                <li class="list-group-item">
                    <strong>MET Value:</strong> @Model.METValue
                </li>
            </ul>

            <!-- Action-knappar -->
            <a asp-action="Edit" asp-route-id="@Model.ExerciseID" class="btn btn-warning">
                Edit
            </a>

        <!-- Actions -->
        <div class="row mt-5">
            <div class="col text-center d-flex justify-content-center gap-3">

                <a asp-action="Index" 
                    class="btn btn-outline-secondary px-5 rounded-pill">
                    Back to list
                </a>
            </div>
        </div>

    </div>
</div>
