@model TheFitnessApp.Models.Exercise

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Exercise Details";
}

<div>
    <div class="card-body p-2">
        <!-- Title -->
        <div class="d-flex justify-content-between align-items-center mb-1">

            <div class="me-5">
                <h4 class="fw-medium">MY Exercise</h4>
                <h1 class="fw-bold text-muted">Details</h1>
            </div>
                <img src="/images/Zenmove-logo.jpg" 
                    class="rounded-4 mb-3 ms-4"
                    style="max-width: 110px;" />
        </div>

        <!-- Details -->
        <div class="row justify-content-center">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-body p-4">

                <div class="float-end mb-3">
                    <span class="badge bg-primary-subtle text-primary">
                        ID: @Model.ExerciseID
                    </span>
                </div>

                <!-- Type & Category -->
                <div class="row mb-3 mt-4">
                    <div class="col-sm-6">
                        <small class="text-muted">Type</small>
                        <div class="fw-medium">@Model.Type</div>
                    </div>
                <div class="col-sm-6">
                        <small class="text-muted">Category</small>
                        <div class="fw-medium">@Model.Category</div>
                    </div>
                </div>

                <!-- Sets / Reps / MET -->
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <small class="text-muted">Sets</small>
                        <div class="fw-medium">@Model.Sets</div>
                    </div>
                    <div class="col-sm-4">
                        <small class="text-muted">Reps</small>
                        <div class="fw-medium">@Model.Reps</div>
                    </div>
                    <div class="col-sm-4">
                        <small class="text-muted">MET Value</small>
                        <div class="fw-medium">@Model.METValue</div>
                    </div>
                </div>

                <hr />

                <!-- Weight & Calories -->
                <div class="row">
                    <div class="col-sm-6">
                        <small class="text-muted">Weight</small>
                        <div class="fw-medium">@Model.WeightKG kg</div>
                    </div>
                    <div class="col-sm-6">
                        <small class="text-muted">Calories Burnt</small>
                        <div class="fw-medium">@Model.CaloriesBurnt kcal</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="row mt-5">
            <div class="col text-center d-flex justify-content-center gap-3">

                <a asp-action="Index" 
                    class="btn btn-outline-secondary px-5 rounded-pill">
                    Back to list
                </a>
            </div>
        </div>

    </div>
</div>
