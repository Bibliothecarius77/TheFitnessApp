@model TheFitnessApp.Models.WorkoutSchedule

@{
  Layout = "_FullscreenModalLayout";
  ViewData["Title"] = "Create Schedule";
}
<div class="text-center text-white rounded-3 mb-4 p-3"
  style="background: linear-gradient(135deg,#7b61ff,#157432);">
  <h2>Create Schedule</h2>
</div>

<form asp-action="Create" method="post">

  <div class="mb-3"> 
    <label asp-for="StartDate" class="form-label mt-3"></label>
    <input asp-for="StartDate" type="date" class="form-control" required />

    <label asp-for="EndDate" class="form-label mt-3"></label>
    <input asp-for="EndDate" type="date" class="form-control" required />

    <label asp-for="Notes" class="form-label mt-3"></label>
    <textarea asp-for="Notes" class="form-control mb-3" required></textarea>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <button type="submit" class="btn btn-primary px-4 rounded-pill">
      Add Schedule
    </button>

    <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">
        Back to list
    </a>
  </div>

</form>
