@model TheFitnessApp.Models.WorkoutSchedule

@{
    Layout = "_FullscreenModalLayout";
    ViewData["Title"] = "Delete Schedule";
}

<div class="text-center text-white rounded-3 mb-4 p-3"
    style="background: linear-gradient(135deg,#5b0e16,#e63244);">
    <h2>Delete Schedule</h2>
</div>

<!-- Warning -->
<div class="alert alert-warning mb-3 text-center">
    Are you sure you want to delete this schedule?
</div>
    
<!-- Details -->
<p class="d-flex justify-content-between">Date
    <span>@Model.StartDate.ToShortDateString()</span>
</p>

<p class="d-flex justify-content-between">Time
    <span>@Model.StartDate.ToShortTimeString() -
        @Model.EndDate.ToShortTimeString()</span>
</p>

<p class="d-flex justify-content-between">Notes
    <span class="fw-bold">
        @Model.Notes</span>
</p>

<!-- Form -->
<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="ScheduleID" />

    <div class="d-flex justify-content-between">
        <a asp-controller="Schedule" asp-action="Index"
            asp-route-id="@Model.ScheduleID"
            class="btn btn-secondary px-4 rounded-pill">
            Cancel
        </a>

        <button type="submit" class="btn btn-danger px-4 rounded-pill">
            Delete
        </button>
    </div>
</form>
