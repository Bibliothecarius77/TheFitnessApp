@model TheFitnessApp.Models.WorkoutSchedule
@* Bekräftelsevy för att ta bort ett träningsschema *@

@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="mb-4 text-danger">Delete Workout Schedule</h1>

            <p class="mb-4">
                Are you sure you want to delete this schedule?
            </p>

            <dl class="row">
                <dt class="col-sm-4">Start Date</dt>
                <dd class="col-sm-8">
                    @Model.StartDate.ToShortDateString()
                </dd>

                <dt class="col-sm-4">End Date</dt>
                <dd class="col-sm-8">
                    @Model.EndDate.ToShortDateString()
                </dd>

                <dt class="col-sm-4">Notes</dt>
                <dd class="col-sm-8">
                    @Model.Notes
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">

                @* Skickar med ID dolt *@
                <input type="hidden" asp-for="ScheduleID" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
